<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disable button -->
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/main_color_disabled" /> <!-- Background color -->
            <corners android:radius="100dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!--Enable state -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="@color/main_color" /> <!-- Background color -->
            <corners android:radius="100dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>