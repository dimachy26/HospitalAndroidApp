<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlActivated">@color/main_color</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:textSize">21sp</item>
        <item name="android:background">@drawable/primary_button_back</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SecondaryButtonStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/secondary_button_back</item>
        <item name="android:textColor">@color/main_color</item>
    </style>

    <style name="RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item> <!-- Увеличьте размер шрифта по мере необходимости -->
        <item name="android:textColor">@color/main_color</item> <!-- Замените на ваш цвет -->
    </style>

</resources>